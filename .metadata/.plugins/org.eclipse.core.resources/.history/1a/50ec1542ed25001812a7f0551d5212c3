<script type="text/javascript">
"use strict";
var x;
var r=confirm("clic en uno de los dos botones");
if (r==true)  {
  alert("Pulsó Si");
  }
else {
  alert("Pulsó No");
  }
document.write("El valor de r es: ", r, "<br/>");

x=prompt("Nombre ", "");

if (x!=null && x != "")
  document.write("<p>Hola " + x + "</p>");
else
  document.write("<code> Nombre no válido </code>");

</script>
